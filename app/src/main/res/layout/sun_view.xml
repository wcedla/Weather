<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sunlayout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="15dp"
    android:visibility="invisible">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="#FFFFFF"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"
        android:text="日出日落"
        />

    <com.wcedla.wcedlaweather.view.SunCustomView
    android:id="@+id/sunview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:Radius="150dp"
    app:SunSrc="@drawable/sun"
    app:SunTextColor="#ffffff"
    app:SunTextSize="12dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1.0px"
        android:layout_below="@id/windleveltext"
        android:layout_marginTop="10dp"
        android:background="#81ececec" />

</LinearLayout>